{
  "[typescript]": {
    "typescript.preferences.quoteStyle": "single",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[svelte]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svelte.plugin.svelte.format.config.singleQuote": true,
  "lnf.aliases": {
    "$/": "${workspaceRoot}/",
    "$apps/": "${workspaceRoot}/apps/",
    "$website/components/": "${workspaceRoot}/apps/website/src/lib/components/",
    "$website/routes/": "${workspaceRoot}/apps/website/src/routes/",
    "$website/": "${workspaceRoot}/apps/website/",
    "$packages/": "${workspaceRoot}/packages/"
  }
}
